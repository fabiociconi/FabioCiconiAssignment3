
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@model LoginViewModel

<h2>Index</h2>

<section>
    <form asp-controller="Login" asp-action="Login" method="post">
        <h1>Log In</h1>
        <hr />
        <br />
        <h2>Type User and Password </h2>
        <br />
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>User</label>
                <input asp-for="User" class="form-control" />
                @*@Html.TextBoxFor(user => user.User)*@
                <span asp-validation-for="User" class="text-danger"></span>
                <label>Password</label>
                <input asp-for="Password" class="form-control" />
                @*@Html.TextBoxFor(password => password.Password)*@
                <span asp-validation-for="Password" class="text-danger"></span>
                <input type="submit" value="Log in" class="btn btn-success btn-lg btn-block" />
            </div>
        </div>
    </form>
</section>

